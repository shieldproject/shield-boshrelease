set -e -x

echo "Extracting pcre..."
tar xzvf nginx/pcre-*.tar.gz

echo "Extracting nginx..."
tar xzvf nginx/nginx-*.tar.gz

echo "Building nginx..."
pushd nginx-*/
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-pcre=../pcre-* \
    --with-http_stub_status_module \
    --with-http_ssl_module

  make
  make install
popd
