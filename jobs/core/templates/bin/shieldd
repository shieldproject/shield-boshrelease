#!/bin/bash
set -eu

RUN_DIR=/var/vcap/sys/run/shield
LOG_DIR=/var/vcap/sys/log/shield
JOB_DIR=/var/vcap/jobs/core
DAT_DIR=/var/vcap/store/shield
PIDFILE=$RUN_DIR/shieldd.pid
mkdir -p $LOG_DIR
exec >>$LOG_DIR/shieldd.log 2>&1

case $1 in
  start)
    mkdir -p $RUN_DIR $DAT_DIR
    chown vcap:vcap $DAT_DIR

    if [[ -f $DAT_DIR/vault.keys && ! -f $DAT_DIR/vault/vault.crypt ]]; then
      echo "$(date) migrating crypted key files from legacy names (.keys -> .crypt)"
      mv $DAT_DIR/vault.keys $DAT_DIR/vault/vault.crypt
    fi
    if [[ -f $DAT_DIR/vault/vault.crypt && ! -f $DAT_DIR/vault.crypt ]]; then
      echo "$(date) migrating crypted key files from legacy directory (vault/) to data root"
      mv $DAT_DIR/vault/vault.crypt $DAT_DIR/vault.crypt
    fi

    if [[ -f $PIDFILE ]]; then
      PID=$(head -1 $PIDFILE)
      test -n "$PID" && test -e /proc/$PID && exit 1
      rm -f $PIDFILE
    fi

    if [[ -f $DAT_DIR/main.db ]]; then
        mv $DAT_DIR/main.db $DAT_DIR/shield.db
    fi

    echo "$(date) running any schema migrations"
    chpst -u vcap:vcap \
      /var/vcap/packages/shield/bin/shield-schema \
        -d $DAT_DIR/shield.db

    echo "$(date) starting up shieldd (pid $$)"
    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap \
      /var/vcap/packages/shield/bin/shieldd \
        -c $JOB_DIR/config/shieldd.conf \
        --log-level <%= p('log-level') %>
    ;;

  stop)
    echo "$(date) shutting down shieldd"
    PID=$(head -1 $PIDFILE)
    if [[ -n "$PID" ]]; then
      kill $PID || true
      while [ -e /proc/$PID ]; do sleep 0.1; done
    fi
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: shieldd {start|stop}"
    exit 1
    ;;
esac
exit 0
